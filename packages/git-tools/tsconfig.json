{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "../..",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "types": ["node"]
  },
  "include": [
    "./commit-types.json",
    "./src/**/*.ts",
    "./bin/**/*.ts",
    "./tsup.base.ts",
    "./tsup.bin.ts",
    "./tsup.changelog-renderer.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
