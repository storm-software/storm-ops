{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "../..",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "bin/**/*.ts",
    "src/declarations.d.ts",
    "tsup.base.ts",
    "tsup.bin.ts"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
