{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "files": ["declarations.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.cjs",
    "scripts/**/*.cjs",
    "bin/**/*",
    "declarations.d.ts",
    "scripts/package-version-warning.mjs",
    "scripts/pre-install.mjs",
    "scripts/prepare.mjs",
    "src/hooks/post-commit.mjs",
    "src/hooks/post-merge.mjs",
    "src/hooks/pre-commit.mjs",
    "src/hooks/pre-push.mjs",
    "src/hooks/post-checkout.mjs"
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
