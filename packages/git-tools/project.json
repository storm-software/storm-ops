{
  "name": "git-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/git-tools/src",
  "projectType": "library",
  "targets": {
    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/git-tools",
          "pnpm copyfiles --up=2 ./packages/git-tools/*.md ./packages/git-tools/package.json dist/packages/git-tools",
          "pnpm copyfiles --up=4 ./packages/git-tools/dist/src/* dist/packages/git-tools/dist",
          "pnpm copyfiles --up=5 ./packages/git-tools/dist/src/commit/config.* dist/packages/git-tools/dist/commit",
          "pnpm copyfiles --up=5 ./packages/git-tools/dist/src/release/* dist/packages/git-tools/dist/release",
          "pnpm copyfiles --up=5 ./packages/git-tools/src/readme/templates/* dist/packages/git-tools/dist/readme/templates",
          "pnpm copyfiles --up=4 ./packages/git-tools/src/lefthook/* dist/packages/git-tools/dist/lefthook",
          "pnpm copyfiles --up=4 ./packages/git-tools/src/lint-staged/* dist/packages/git-tools/dist/lint-staged",
          "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/*/* dist/packages/git-tools/bin"
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/post-checkout/* dist/packages/git-tools/bin/post-checkout",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/post-merge/* dist/packages/git-tools/post-merge",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/pre-commit/* dist/packages/git-tools/pre-commit",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/pre-install/* dist/packages/git-tools/pre-install",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/pre-push/* dist/packages/git-tools/pre-push",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/prepare/* dist/packages/git-tools/prepare",
          // "pnpm copyfiles --up=4 ./packages/git-tools/dist/bin/version-warning/* dist/packages/git-tools/version-warning"
        ]
      }
    },

    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
