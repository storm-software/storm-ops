{
  "$schema": "https://json-schema.org/schema",
  "name": "storm-workspace",
  "version": "0.0.1",
  "generators": {
    "init": {
      "factory": "./dist/generators/init/init#initGenerator",
      "schema": "./dist/generators/init/schema.json",
      "description": "Initialize the `@storm-software/workspace-tools` plugin.",
      "aliases": ["ng-add"],
      "internal": true
    },
    "preset": {
      "factory": "./dist/generators/preset/generator",
      "schema": "./dist/generators/preset/schema.json",
      "description": "Storm workspace preset generator",
      "x-use-standalone-layout": true
    },
    "node-library": {
      "factory": "./dist/generators/node-library/generator",
      "schema": "./dist/generators/node-library/schema.json",
      "aliases": ["node-lib"],
      "x-type": "library",
      "description": "Create a new NodeJs TypeScript library package in the Storm workspace"
    },
    "config-schema": {
      "factory": "./dist/generators/config-schema/generator",
      "schema": "./dist/generators/config-schema/schema.json",
      "description": "Create a Storm JSON schema based on the workspaces project configurations"
    },
    "neutral-library": {
      "factory": "./dist/generators/neutral-library/generator",
      "schema": "./dist/generators/neutral-library/schema.json",
      "aliases": ["neutral-lib"],
      "x-type": "library",
      "description": "Create a new Neutral TypeScript library package in the Storm workspace"
    },
    "browser-library": {
      "factory": "./dist/generators/browser-library/generator",
      "schema": "./dist/generators/browser-library/schema.json",
      "aliases": ["browser-lib"],
      "x-type": "library",
      "description": "Create a new browser TypeScript library package in the Storm workspace"
    },
    "design-tokens": {
      "factory": "./dist/generators/design-tokens/generator",
      "schema": "./dist/generators/design-tokens/schema.json",
      "description": "Generate design tokens code using a Token Studio export"
    },
    "release-version": {
      "factory": "./dist/generators/release-version/generator",
      "schema": "./dist/generators/release-version/schema.json",
      "description": "The release version generator used in Storm Workspaces"
    }
  }
}
