{
  "$schema": "../../../node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "format",
          "test",
          "e2e"
        ],
        "parallel": 4,
        "cacheDirectory": "node_modules/.cache/nx"
      }
    }
  },
  "defaultBase": "main",
  "namedInputs": {
    "globalBuildAffectingConfig": [
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/package.json"
    ],
    "globalNonBuildAffectingConfig": [
      "{workspaceRoot}/**/biome.json",
      "{workspaceRoot}/**/lefthook.json",
      "{workspaceRoot}/.log4brains.yml",
      "{workspaceRoot}/.eslintrc.json",
      "{workspaceRoot}/.all-contributorsrc",
      "{workspaceRoot}/.markdownlint.json",
      "{workspaceRoot}/.whitesource",
      "{workspaceRoot}/socket.yaml",
      "{workspaceRoot}/jest.config.ts"
    ],
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "{workspaceRoot}/testing/jest-setup.[jt]s",
      "{projectRoot}/src/test-setup.[jt]s",
      "{projectRoot}/test-setup.[jt]s"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/tsconfig.storybook.json"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/babel.config.json",
      "{workspaceRoot}/storm.json",
      "{workspaceRoot}/storm.config.js"
    ]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "dependsOn": [
        "^build"
      ],
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "dist/{projectRoot}",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          {
            "glob": "*.md",
            "input": "{projectRoot}",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "command": "npx biome lint --apply --no-errors-on-unmatched --files-ignore-unknown=true {projectRoot}",
        "color": true
      },
      "inputs": [
        "default",
        "{workspaceRoot}/**/biome.json"
      ]
    },
    "test": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/jest.preset.js"
      ],
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "e2e": {
      "cache": true
    },
    "nx-release-publish": {
      "cache": false,
      "inputs": [
        "default",
        "^production"
      ],
      "dependsOn": [
        "^build"
      ],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "release": {
    "projects": [
      "packages/*"
    ],
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}-v{version}",
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": false,
      "projectChangelogs": {
        "renderer": "@storm-software/changelog",
        "createRelease": "github",
        "entryWhenNoChanges": false,
        "git": {
          "commit": true
        }
      }
    },
    "version": {
      "generator": "@storm-software/workspace-tools:release-version",
      "generatorOptions": {
        "packageRoot": "{projectRoot}",
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits",
        "git": {
          "stageChanges": true
        }
      }
    }
  },
  "plugins": [
    "@nx/plugin",
    "@nx/js",
    "@nx/jest",
    {
      "plugin": "@storm-software/workspace-tools",
      "options": {
        "targetName": "nx-release-publish"
      }
    }
  ],
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  }
}