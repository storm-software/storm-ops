{
  "name": "workspace-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/workspace-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/workspace-tools",
        "tsConfig": "packages/workspace-tools/tsconfig.lib.json",
        "project": "packages/workspace-tools/package.json",
        "main": "packages/workspace-tools/index.ts",
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": false,
        "metafile": true,
        "minify": false,
        "external": [
          "nx",
          "@swc-node/register",
          "@storm-software/config",
          "@storm-software/config-tools"
        ],
        "assets": [
          {
            "input": "./packages/workspace-tool",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "./packages/workspace-tool",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "./packages/workspace-tool",
            "glob": "**/*.json",
            "ignore": [
              "**/tsconfig*.json",
              "project.json",
              ".eslintrc.json"
            ],
            "output": "/"
          },
          {
            "input": "./packages/workspace-tool",
            "glob": "**/*.js",
            "ignore": [
              "**/jest.config.js"
            ],
            "output": "/"
          },
          {
            "input": "./packages/workspace-tool",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "./packages/workspace-tools",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./packages/workspace-tools/config",
            "glob": "**/*.*",
            "output": "./config"
          },
          {
            "input": "./packages/workspace-tools/assets",
            "glob": "**/*.*",
            "output": "./assets"
          }
        ]
      }
    },
    "nx-release-publish": {
      "cache": false,
      "inputs": [
        "default",
        "^production"
      ],
      "dependsOn": [
        "^build"
      ],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "tags": [
    "type:util",
    "scope:tools"
  ]
}