{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "**/*.json",
    "declarations.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}