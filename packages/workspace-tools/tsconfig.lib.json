{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.json",
    "declarations.d.ts",
    "../build/src/config/default-config.ts",
    "../config-tools/src/utilities/file-path-utils.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}