{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "allowJs": true,
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/generators/node-library/files/jest.config.ts.template"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
