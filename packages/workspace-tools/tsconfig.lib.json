{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.json", "declarations.d.ts"],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
