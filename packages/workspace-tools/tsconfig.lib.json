{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "../..",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/schema.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
