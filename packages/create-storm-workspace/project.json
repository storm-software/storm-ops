{
  "name": "create-storm-workspace",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/create-storm-workspace/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/create-storm-workspace",
        "tsConfig": "packages/create-storm-workspace/tsconfig.lib.json",
        "project": "packages/create-storm-workspace/package.json",
        "main": "packages/create-storm-workspace/bin/index.ts",
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": false,
        "minify": true,
        "skipTypeCheck": false,
        "thirdParty": true,
        "format": ["esm", "cjs"],
        "esbuildOptions": {
          "outExtension": {
            ".js": ".js"
          }
        },
        "assets": [
          {
            "input": "packages/create-storm-workspace",
            "glob": "README.md",
            "output": "/"
          },
          {
            "input": "packages/create-storm-workspace",
            "glob": "CHANGELOG.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "packages/create-storm-workspace",
            "glob": "bin/**/*",
            "output": "."
          }
        ]
      }
    },
    "lint": {},
    "nx-release-publish": {
      "cache": false,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "tags": ["type:util", "scope:tools"]
}
