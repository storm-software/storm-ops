{
  "name": "esbuild",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/esbuild/src",
  "projectType": "library",
  "targets": {
    "build": {
      "cache": true,
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/esbuild",
        "tsConfig": "packages/esbuild/tsconfig.json",
        "project": "packages/esbuild/package.json",
        "main": "packages/esbuild/src/index.ts",
        "format": ["cjs", "esm"],
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": false,
        "metafile": true,
        "minify": false,
        "external": [
          "esbuild",
          "nx",
          "@nx/devkit",
          "@nx/js",
          "@nx/workspace",
          "@microsoft/api-extractor",
          "spdx-exceptions",
          "spdx-license-ids"
        ],
        "assets": [
          {
            "input": "./packages/esbuild",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./packages/esbuild/src",
            "glob": "{*.json,.prettierignore}",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
