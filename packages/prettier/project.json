{
  "name": "prettier",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/prettier/src",
  "projectType": "library",
  "targets": {
    "build-base": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm copyfiles packages/prettier/src/recommended.json tmp",
          "mv tmp/packages/prettier/src/recommended.json packages/prettier/src/config.json"
        ],
        "parallel": false
      }
    },
    "build": {
      "cache": true,
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build-base"],
      "options": {
        "outputPath": "dist/packages/prettier",
        "tsConfig": "packages/prettier/tsconfig.json",
        "project": "packages/prettier/package.json",
        "main": "packages/prettier/src/index.ts",
        "format": ["cjs", "esm"],
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": false,
        "metafile": true,
        "minify": false,
        "assets": [
          {
            "input": "./packages/prettier",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./packages/prettier/src",
            "glob": "{*.json,.prettierignore}",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
