{
  "name": "prettier",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/prettier/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/prettier",
        "tsConfig": "packages/prettier/tsconfig.json",
        "project": "packages/prettier/package.json",
        "main": "packages/prettier/src/index.ts",
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": false,
        "metafile": true,
        "minify": false,
        "assets": [
          {
            "input": "./packages/prettier",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./packages/prettier/src",
            "glob": "{config.json,.prettierignore}",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": []
}
