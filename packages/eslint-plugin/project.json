    "lint-docs": {
      "executor": "nx:run-commands",
      "inputs": [
        "config_linting",
        "config_docs",
        "source_docs",
        "typescript",
        "^production"
      ],
      "outputs": ["{projectRoot}/README.md"],
      "dependsOn": ["build", "^lint"],
      "options": {
        "command": "pnpm exec eslint-doc-generator -- --check",
        "parallel": false,
        "cwd": "packages/eslint-plugin"
      }
    },
    "build": {
      "cache": true,
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "node -r esbuild-register packages/eslint-plugin/tools/build.js",
        "parallel": false
      }
    },
    "docs": {
      "executor": "nx:run-commands",
      "inputs": [
        "config_linting",
        "config_docs",
        "source_docs",
        "typescript",
        "^production"
      ],
      "outputs": ["{projectRoot}/README.md"],
      "dependsOn": ["build", "lint-docs", "^docs"],
      "options": {
        "command": "pnpm exec eslint-doc-generator",
        "parallel": false,
        "cwd": "packages/eslint-plugin"
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
