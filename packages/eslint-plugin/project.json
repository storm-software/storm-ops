{
  "name": "eslint-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/eslint-plugin",
        "main": "packages/eslint-plugin/src/index.ts",
        "additionalEntryPoints": ["packages/eslint-plugin/src/types.ts"],
        "tsConfig": "packages/eslint-plugin/tsconfig.json",
        "external": ["@nx/*", "@storm-software/*", "eslint"],
        "format": ["esm", "cjs"],
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": false,
        "metafile": true,
        "minify": false,
        "assets": [
          {
            "input": "./packages/eslint-plugin",
            "glob": "*.md",
            "output": "/"
          },
          {
            "input": "./packages/eslint-plugin",
            "glob": "./index.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
