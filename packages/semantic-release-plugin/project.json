{
  "name": "semantic-release-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/semantic-release-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/semantic-release-plugin",
        "main": "packages/semantic-release-plugin/src/index.ts",
        "tsConfig": "packages/semantic-release-plugin/tsconfig.lib.json",
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": true,
        "minify": false,
        "skipTypeCheck": true,
        "thirdParty": true,
        "format": ["cjs", "esm"],
        "external": [
          "@swc/wasm",
          "@swc/core",
          "nx",
          "@angular-devkit/architect",
          "@semantic-release/exec",
          "@semantic-release/git",
          "@semantic-release/npm"
        ],
        "assets": [
          {
            "input": "packages/git-tools",
            "glob": "README.md",
            "output": "/"
          },
          {
            "input": "packages/git-tools",
            "glob": "CHANGELOG.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      }
    },
    "lint": {},
    "test": {}
  },
  "tags": []
}
