{
  "plugins": [
    "prettier-plugin-packagejson",
    "prettier-plugin-prisma",
    "prettier-plugin-tailwindcss"
  ],
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "preserve",
  "insertPragma": false,
  "bracketSameLine": true,
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.hbs",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "**/*.acid",
      "options": {
        "parser": "prisma-parse"
      }
    },
    {
      "files": "**/*.acidic",
      "options": {
        "parser": "prisma-parse"
      }
    }
  ]
}
