{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "../..",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "noLib": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "Bundler",
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts", "tsup.config.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
