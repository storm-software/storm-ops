{
  "name": "build-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/build-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "cache": true,
      "executor": "@nx/esbuild:esbuild",
      "inputs": [
        "default",
        "^production"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/build-tools",
        "tsConfig": "packages/build-tools/tsconfig.json",
        "project": "packages/build-tools/package.json",
        "main": "packages/build-tools/src/index.ts",
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": true,
        "minify": false,
        "skipTypeCheck": false,
        "thirdParty": true,
        "platform": "node",
        "format": [
          "esm",
          "cjs"
        ],
        "external": [
          "nx"
        ],
        "assets": [
          {
            "input": "packages/build-tools",
            "glob": "*.md",
            "output": "."
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/build-tools",
            "glob": "bin/**/{*,*.*}",
            "output": "."
          }
        ]
      }
    },
    "lint": {},
    "test": {},
    "nx-release-publish": {
      "cache": false,
      "inputs": [
        "default",
        "^production"
      ],
      "dependsOn": [
        "^build"
      ],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "tags": []
}