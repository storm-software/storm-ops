{
  "name": "build-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/build-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "cache": true,
      "executor": "@nx/esbuild:esbuild",
      "inputs": [
        "default",
        "^production"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/build-tools",
        "tsConfig": "packages/build-tools/tsconfig.json",
        "project": "packages/build-tools/package.json",
        "main": "packages/build-tools/src/index.ts",
        "additionalEntryPoints": [
          "packages/build-tools/bin/build.ts"
        ],
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": true,
        "minify": false,
        "skipTypeCheck": false,
        "thirdParty": true,
        "platform": "node",
        "format": [
          "esm",
          "cjs"
        ],
        "external": [
          "nx",
          "esbuild",
          "@swc/core",
          "./transpilers/swc.js",
          "style-inject/dist/style-inject.es"
        ],
        "assets": [
          {
            "input": "packages/build-tools",
            "glob": "*.md",
            "output": "."
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/build-tools",
            "glob": "bin/**/{*,*.*}",
            "output": "."
          },
          {
            "input": "packages/build-tools",
            "glob": "assets/*.*",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": []
}