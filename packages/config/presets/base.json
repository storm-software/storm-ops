{
  "organization": "storm-software",
  "ci": true,
  "owner": "@storm-software/development",
  "timezone": "America/New_York",
  "locale": "en-US",
  "logLevel": "debug",
  "externalPackagePatterns": [
    "@storm-software/"
  ],
  "colors": {
    "primary": "#1fb2a6",
    "dark": "#1d232a",
    "light": "#f4f4f5",
    "success": "#087f5b",
    "info": "#0ea5e9",
    "warning": "#fcc419",
    "error": "#990000",
    "fatal": "#7d1a1a"
  },
  "extensions": {
    "telemetry": {
      "fileName": "storm",
      "fileExtension": "log",
      "path": "tmp/storm/logs",
      "stacktrace": true
    }
  }
}