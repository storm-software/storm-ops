{
  "$schema": "https://cdn.jsdelivr.net/npm/@storm-software/config/schemas/storm-workspace.schema.json",
  "organization": "storm-software",
  "owner": "@storm-software/admin",
  "bot": { "name": "stormie-bot", "email": "bot@stormsoftware.com" },
  "mode": "production",
  "timezone": "America/New_York",
  "locale": "en-US",
  "logLevel": "info",
  "skipConfigLogging": true,
  "skipCache": false,
  "directories": {
    "build": "dist"
  },
  "externalPackagePatterns": ["@storm-software/"],
  "registry": {
    "github": "https://npm.pkg.github.com",
    "npm": "https://registry.npmjs.org",
    "cargo": "https://crates.io",
    "cyclone": "https://registry.cyclone-ui.com/components",
    "container": "https://hub.docker.com"
  },
  "colors": {
    "light": {
      "background": "#fafafa",
      "foreground": "#1d1e22",
      "brand": "#1fb2a6",
      "alternate": "#db2777",
      "help": "#5C4EE5",
      "success": "#087f5b",
      "info": "#0550ae",
      "warning": "#e3b341",
      "danger": "#a40e26",
      "positive": "#22c55e",
      "negative": "#dc2626"
    },
    "dark": {
      "background": "#1d1e22",
      "foreground": "#cbd5e1",
      "brand": "#1fb2a6",
      "alternate": "#db2777",
      "help": "#818cf8",
      "success": "#12B66A",
      "info": "#0070E0",
      "warning": "#f3d371",
      "danger": "#D8314A",
      "positive": "#22c55e",
      "negative": "#dc2626"
