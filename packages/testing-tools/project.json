{
  "name": "testing-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/testing-tools/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/testing-tools",
        "main": "packages/testing-tools/src/index.ts",
        "tsConfig": "packages/testing-tools/tsconfig.lib.json",
        "project": "packages/testing-tools/package.json",
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": false,
        "minify": false,
        "skipTypeCheck": false,
        "thirdParty": true,
        "format": ["cjs", "esm"],
        "external": ["nx", "@nx/jest", "jest"],
        "assets": [
          {
            "input": "packages/testing-tools",
            "glob": "*.md",
            "output": "."
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/testing-tools/src",
            "glob": "jest/**/*.*",
            "output": "."
          },
          {
            "input": "./packages/testing-tools",
            "glob": "declarations.d.ts",
            "output": "."
          }
        ]
      }
    },
    "lint": {},
    "test": {},
    "nx-release-publish": {
      "cache": false,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  },
  "tags": ["type:util", "scope:tools"]
}
