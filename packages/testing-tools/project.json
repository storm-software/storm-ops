    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/testing-tools",
          "pnpm copyfiles --up=2 \"./packages/testing-tools/*.md\" ./packages/testing-tools/package.json dist/packages/testing-tools",
          "pnpm copyfiles --up=5 \"./packages/testing-tools/src/jest/__mocks__/**/*\" dist/packages/testing-tools/dist/jest/__mocks__",
          "pnpm copyfiles --up=4 \"./packages/testing-tools/dist/src/**/*\" dist/packages/testing-tools/dist"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
