{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "target": "ESNext",
    "noEmit": true,
    "esModuleInterop": true,
    "types": ["node", "@typescript-eslint/parser/dist/index.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*_spec.ts",
    "**/*_test.ts",
    "jest.config.ts"
  ]
}
