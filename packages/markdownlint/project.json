{
  "name": "markdownlint",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/markdownlint/src",
  "targets": {
    "build-base": {
      "cache": true,
      "inputs": ["typescript", "production"],
      "outputs": ["{workspaceRoot}/dist/packages/markdownlint/**"],
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup-node --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": [
        "{workspaceRoot}/packages/markdownlint/dist/**",
        "{workspaceRoot}/packages/markdownlint/src/config/**"
      ],
      "outputs": ["{workspaceRoot}/dist/packages/markdownlint/**"],
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles --up=3 --all \"./packages/markdownlint/dist/*\" dist/packages/markdownlint/dist",
          "pnpm copyfiles --up=3 --all \"./packages/markdownlint/dist/rules/*\" dist/packages/markdownlint/dist/rules",
          "pnpm copyfiles --up=4 --all \"./packages/markdownlint/src/config/*\" dist/packages/markdownlint/config",
          "pnpm copyfiles --up=2 --all \"./packages/markdownlint/*.md\" dist/packages/markdownlint",
          "pnpm copyfiles --up=2 --all \"./packages/markdownlint/package.json\" dist/packages/markdownlint",
          "pnpm copyfiles LICENSE dist/packages/markdownlint"
        ]
      }
    },

    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
