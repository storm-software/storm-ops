{
  "name": "markdownlint",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/markdownlint/src",
  "targets": {
    "clean": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{workspaceRoot}/dist/packages/markdownlint/**"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "commands": [
          "pnpm exec rimraf dist/packages/markdownlint",
          "pnpm exec rimraf packages/markdownlint/dist"
        ],
        "parallel": true,
        "color": true
      }
    },
    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup-node --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": [
        "{workspaceRoot}/packages/markdownlint/dist/**",
        "{workspaceRoot}/packages/markdownlint/config/**"
      ],
      "outputs": ["{workspaceRoot}/dist/packages/markdownlint/**"],
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles --up=3 packages/markdownlint/dist/* dist/packages/markdownlint/dist",
          "pnpm copyfiles --up=3 packages/markdownlint/dist/rules/* dist/packages/markdownlint/dist/rules",
          "pnpm copyfiles --up=4 \"packages/markdownlint/src/config/markdown-link-check.json\" dist/packages/markdownlint/config",
          "pnpm copyfiles --up=4 \"packages/markdownlint/src/config/.markdownlint.jsonc\" dist/packages/markdownlint/config",
          "pnpm copyfiles --up=4 \"packages/markdownlint/src/config/.markdownlint-cli2.jsonc\" dist/packages/markdownlint/config",
          "pnpm copyfiles --up=2 packages/markdownlint/*.md packages/markdownlint/package.json dist/packages/markdownlint",
          "pnpm copyfiles LICENSE dist/packages/markdownlint"
        ]
      }
    },

    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
