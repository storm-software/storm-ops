{
  "name": "@storm-software/storm-ops",
  "version": "0.0.1",
  "description": "⚙️ The Storm-Ops monorepo contains utility applications, tools, and various libraries to create modern and scalable web applications.",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-ops.git"
  },
  "homepage": "https://stormsoftware.com",
  "bugs": {
    "url": "https://github.com/storm-software/storm-ops/issues",
    "email": "support@stormsoftware.com"
  },
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.com",
    "url": "https://stormsoftware.com"
  },
  "maintainers": [
    {
      "name": "Storm Software",
      "email": "contact@stormsoftware.com",
      "url": "https://stormsoftware.com"
    },
    {
      "name": "Pat Sullivan",
      "email": "admin@stormsoftware.com",
      "url": "https://patsullivan.org"
    }
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/storm-software"
  },
  "license": "Apache-2.0",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">=22.4.0",
    "pnpm": ">=9.10.0"
  },
  "keywords": [
    "storm",
    "storm-ops",
    "storm-stack",
    "acidic",
    "cyclone-ui",
    "nextjs",
    "graphql",
    "sullivanpj",
    "open-system",
    "monorepo"
  ],
  "scripts": {
    "adr": "pnpm log4brains adr new",
    "adr-preview": "pnpm log4brains preview",
    "build": "nx affected -t build --parallel=3",
    "build-all": "nx run-many -t build --all --parallel=3",
    "build-plugins": "node -r esbuild-register tools/scripts/build-plugins.ts && pnpm nx run eslint:build",
    "clean": "rimraf dist",
    "clean-packages": "rimraf dist/packages",
    "commit": "node ./dist/packages/git-tools/bin/git.js commit",
    "dep-graph": "nx dep-graph",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "format-prettier": "pnpm exec prettier --write --ignore-unknown --no-error-on-unmatched-pattern --config=\"prettier.config.js\" --ignore-path=\"./packages/prettier/src/.prettierignore\" ",
    "format-readme": "node ./dist/packages/git-tools/bin/git.js readme-gen --templates=\"./dist/packages/git-tools/readme/templates\"",
    "format-sherif": "pnpm exec sherif -f -i typescript",
    "format-toml": "pnpm exec taplo format --config=\"./dist/packages/linting-tools/taplo/.config.toml\" --cache-path=\"./tmp/taplo\"",
    "help": "nx help",
    "lint": "node -r esbuild-register ./dist/packages/linting-tools/bin/lint.js all --skip-cspell --skip-alex --skip-circular-deps",
    "lint-knip": "pnpm exec knip",
    "lint-ls": "pnpm exec ls-lint --config=\"./dist/packages/linting-tools/ls-lint/ls-lint.yml\"",
    "lint-prettier": "pnpm exec prettier --check --config=\"prettier.config.js\" --ignore-path=\"./packages/prettier/src/.prettierignore\" --cache ",
    "lint-sherif": "pnpm exec sherif -i typescript",
    "lint-toml": "pnpm exec taplo format --check --config=\"./dist/packages/linting-tools/taplo/.config.toml\"",
    "local-registry": "nx local-registry @storm-software/storm-ops",
    "nuke": "nx clear-cache && rimraf tmp && rimraf .nx/cache && rimraf .nx/workspace-data && rimraf --glob **/packages/node_modules && rimraf --glob **/node_modules",
    "nx": "nx",
    "prebuild": "pnpm build-plugins",
    "prebuild-all": "pnpm build-plugins",
    "push": "git push origin main:main",
    "rebuild": "pnpm clean && pnpm build",
    "rebuild-all": "pnpm clean-all && pnpm build-all",
    "release": "node ./dist/packages/git-tools/bin/git.js release",
    "start": "nx serve",
    "format-syncpack": "pnpm exec syncpack fix-mismatches --config=\"./dist/packages/linting-tools/syncpack/config.json\" && pnpm exec syncpack format --config=\"./dist/packages/linting-tools/syncpack/config.json\"",
    "test": "echo Skipping workspace testing..."
  },
  "dependencies": {
    "@chialab/esbuild-plugin-require-resolve": "0.18.0",
    "@eslint/eslintrc": "2.1.4",
    "@eslint/js": "9.4.0",
    "@ls-lint/ls-lint": "2.2.3",
    "@ltd/j-toml": "1.38.0",
    "@monodon/rust": "1.4.0",
    "@nx/devkit": "20.2.2",
    "@nx/esbuild": "20.2.2",
    "@nx/eslint": "20.2.2",
    "@nx/eslint-plugin": "20.2.2",
    "@nx/jest": "20.2.2",
    "@nx/js": "20.2.2",
    "@nx/plugin": "20.2.2",
    "@nx/workspace": "20.2.2",
    "@swc-node/register": "1.9.2",
    "@swc/core": "1.5.29",
    "@swc/helpers": "0.5.11",
    "@swc/wasm": "1.6.5",
    "@taplo/cli": "0.7.0",
    "@types/jest": "29.5.12",
    "@types/node": "^22.4.0",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "typescript-eslint": "^8.13.0",
    "c12": "2.0.0-beta.2",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "copyfiles": "2.4.1",
    "esbuild": "0.24.0",
    "esbuild-register": "3.5.0",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-eslint-plugin": "6.1.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-environment-node": "29.7.0",
    "knip": "5.25.2",
    "lefthook": "1.6.18",
    "nx": "20.2.2",
    "nx-cloud": "19.1.0",
    "prettier": "^3.3.3",
    "rimraf": "5.0.7",
    "sherif": "0.10.0",
    "syncpack": "13.0.0",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslib": "^2.6.3",
    "typescript": "^5.7.2",
    "verdaccio": "5.31.1"
  },
  "namespace": "@storm-software",
  "nx": {
    "includedScripts": [
      "lint-sherif",
      "lint-knip",
      "lint-ls",
      "lint",
      "format",
      "format-sherif",
      "format-syncpack",
      "format-readme",
      "format-prettier",
      "format-toml",
      "commit",
      "release"
    ]
  },
  "pnpm": {
    "overrides": {
      "@cypress/request": ">=3.0.0",
      "@storm-software/build-tools": "workspace:*",
      "@storm-software/cloudflare-tools": "workspace:*",
      "@storm-software/config": "workspace:*",
      "@storm-software/config-tools": "workspace:*",
      "@storm-software/eslint": "workspace:*",
      "@storm-software/git-tools": "workspace:*",
      "@storm-software/k8s-tools": "workspace:*",
      "@storm-software/linting-tools": "workspace:*",
      "@storm-software/markdownlint": "workspace:*",
      "@storm-software/prettier": "workspace:*",
      "@storm-software/esbuild": "workspace:*",
      "@storm-software/unbuild": "workspace:*",
      "@storm-software/terraform-tools": "workspace:*",
      "@storm-software/testing-tools": "workspace:*",
      "@storm-software/tsconfig": "workspace:*",
      "@storm-software/workspace-tools": "workspace:*",
      "@storm-software/terraform-modules": "workspace:*",
      "@storm-software/eslint-config": "workspace:*",
      "eslint-plugin-storm-software": "workspace:*",
      "eslint-plugin-storm-graphql": "workspace:*",
      "eslint-plugin-storm-react": "workspace:*",
      "axios": "1.7.2",
      "create-storm-workspace": "workspace:*",
      "got": "14.3.0",
      "load-plugin": "6.0.3",
      "request": ">=2.88.2",
      "tough-cookie": "4.1.4"
    },
    "patchedDependencies": {
      "cosmiconfig@9.0.0": "patches/cosmiconfig@9.0.0.patch",
      "tsup@8.0.0": "patches/tsup@8.0.0.patch"
    }
  },
  "triggerEmptyDevReleaseByIncrementingThisNumber": 0
}
