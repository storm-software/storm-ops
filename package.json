  "private": true,
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.4.0"
  },
  "keywords": [
    "storm",
    "storm-ops",
    "stormstack",
    "storm-stack",
    "acidic",
    "acidic-lang",
    "acidic-model",
    "cyclone-ui",
