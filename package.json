{
  "name": "@storm-software/storm-ops",
  "version": "0.0.0",
  "private": true,
  "description": "âš¡The Storm-Ops monorepo contains utility applications, tools, and various libraries to create modern and scalable web applications.",
  "keywords": [
    "storm",
    "storm-ops",
    "stormstack",
    "storm-stack",
    "forecast",
    "forecast-lang",
    "forecast-model",
    "impact",
    "nextjs",
    "prisma",
    "zenstack",
    "hasura",
    "strapi",
    "graphql",
    "sullivanpj",
    "open-system",
    "monorepo"
  ],
  "homepage": "https://stormsoftware.org",
  "bugs": {
    "url": "https://github.com/storm-software/storm-ops/issues",
    "email": "support@stormsoftware.org"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-ops.git"
  },
  "license": "Apache License 2.0",
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.org",
    "url": "https://stormsoftware.org"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "adr": "pnpm log4brains adr new",
    "adr-preview": "pnpm log4brains preview",
    "api-extractor": "nx g @storm-software/workspace-tools:api-extractor --outputPath 'docs/api-reference' --clean --no-interactive",
    "prebuild": "pnpm clean",
    "build": "nx affected -t build --parallel=5",
    "build:all": "nx run-many -t build --all --parallel=5",
    "build:storybook": "storybook build -s public",
    "clean": "rimraf dist",
    "clean:packages": "rimraf dist/packages",
    "commit": "pnpm dist/packages/git-tools/bin/cli.js commit",
    "dep-graph": "nx dep-graph",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "help": "nx help",
    "preinstall": "pnpm dist/packages/workspace-tools/scripts/pre-install.js || npx -y only-allow pnpm",
    "install:csb": "corepack enable && pnpm install --frozen-lockfile",
    "lint": "pnpm dist/packages/linting-tools/bin/cli all --skip-cspell --alex-config=\"dist/packages/linting-tools/alex/.alexrc\" --alex-config=\"dist/packages/linting-tools/alex/.alexignore\"",
    "local-registry": "nx local-registry @storm-software/storm-ops",
    "nx": "nx",
    "prepare": "pnpm prepare:husky && npx patch-package -y",
    "prepare:husky": "is-ci || husky install",
    "release": "pnpm dist/packages/git-tools/bin/cli.js release --plugin=\"dist/packages/semantic-release-plugin\"",
    "start": "nx serve",
    "test": "nx test"
  },
  "prettier": "./dist/packages/linting-tools/prettier/config.js",
  "dependencies": {
    "@nx/devkit": "17.0.1",
    "@nx/esbuild": "17.0.1",
    "@nx/eslint": "17.0.1",
    "@nx/eslint-plugin": "17.0.1",
    "@nx/jest": "17.0.1",
    "@nx/js": "17.0.1",
    "@nx/plugin": "^17.0.1",
    "@nx/workspace": "17.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@swc-node/register": "~1.6.7",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/jest": "^29.4.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "esbuild": "^0.19.2",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "lint-staged": "^15.0.2",
    "nx": "17.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-packagejson": "^2.4.6",
    "prettier-plugin-prisma": "^5.0.0",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.1.3",
    "verdaccio": "^5.0.4"
  },
  "packageManager": "pnpm@8.7.4",
  "namespace": "@storm-software",
  "nx": {
    "includedScripts": [
      "lint",
      "format"
    ]
  },
  "pnpm": {
    "overrides": {
      "create-storm-workspace": "workspace:*",
      "@storm-software/workspace-tools": "workspace:*",
      "@storm-software/linting-tools": "workspace:*",
      "@storm-software/git-tools": "workspace:*",
      "@storm-software/semantic-release-plugin": "workspace:*"
    },
    "patchedDependencies": {
      "semantic-release@22.0.5": "patches/semantic-release@22.0.5.patch",
      "semantic-release-plugin-decorators@3.0.1": "patches/semantic-release-plugin-decorators@3.0.1.patch"
    }
  }
}
