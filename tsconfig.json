{
  "extends": "./tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "isolatedModules": true,
    "importHelpers": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.json"],
  "exclude": ["node_modules", "tmp"]
}
