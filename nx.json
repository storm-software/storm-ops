{
  "extends": "./packages/workspace-tools/config/nx.json",
  "targetDefaults": {
    "lint": {
      "cache": true,
      "inputs": ["default"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^lint"]
    },
    "clean": {
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec rimraf dist/{projectRoot}"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"]
    },
    "docs": {
      "cache": true,
      "inputs": ["defaultDocs", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build", "^docs"]
    },
    "test": {
      "cache": true,
      "inputs": ["defaultTesting", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["build", "^test"]
    },
    "e2e": {
      "cache": true,
      "inputs": ["defaultTesting", "^production"],
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["test", "^e2e"]
    },
    "nx-release-publish": {
      "cache": false,
      "inputs": ["default", "^production"],
      "dependsOn": ["build", "^nx-release-publish"]
    }
  },
  "release": {
    "projects": ["packages/*", "crates/*"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "{projectName}@{version}",
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": false,
      "projectChangelogs": {
        "createRelease": "github",
        "entryWhenNoChanges": false
      }
    },
    "version": {
      "generator": "@storm-software/workspace-tools:release-version",
      "generatorOptions": {
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits"
      }
    }
  },
  "plugins": [
    "@nx/eslint/plugin",
    "./dist/plugins/rust/index.js",
    "./dist/plugins/typescript/index.js",
    "./dist/plugins/cloudflare/index.js"
  ]
}
