{
  "$schema": "./packages/config/schemas/storm.schema.json",
  "extends": "./packages/config/presets/base.json",
  "name": "storm-ops",
  "namespace": "storm-software",
  "repository": "https://github.com/storm-software/storm-ops",
  "organization": "storm-software",
  "ci": true,
  "owner": "@storm-software/development",
  "timezone": "America/New_York",
  "locale": "en-US",
  "logLevel": "all",
  "packageManager": "pnpm",
  "externalPackagePatterns": ["@storm-software/"],
  "colors": {
    "light": {
      "background": "#f4f4f5",
      "foreground": "#1d232a",
      "brand": "#1fb2a6",
      "help": "#8250df",
      "success": "#087f5b",
      "info": "#0550ae",
      "warning": "#e3b341",
      "error": "#a40e26"
    },
    "dark": {
      "background": "#22272E",
      "foreground": "#fcfcf5",
      "brand": "#1fb2a6",
      "help": "#8256D0",
      "success": "#087f5b",
      "info": "#316DCA",
      "warning": "#F3D371",
      "error": "#d1242f"
    }
  },
  "extensions": {
    "telemetry": {
      "fileName": "storm",
      "fileExtension": "log",
      "path": "tmp/storm/logs",
      "stacktrace": true
    }
  }
}
