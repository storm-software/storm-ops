{
  "extends": "./packages/config/presets/base.json",
  "name": "storm-ops",
  "namespace": "storm-software",
  "repository": "https://github.com/storm-software/storm-ops",
  "organization": "storm-software",
  "ci": true,
  "owner": "@storm-software/development",
  "timezone": "America/New_York",
  "locale": "en-US",
  "logLevel": "info",
  "packageManager": "pnpm",
  "externalPackagePatterns": ["@storm-software/"],
  "colors": {
    "light": {
      "background": "#f4f4f5",
      "foreground": "#1c2128",
      "brand1": "#1fb2a6",
      "brand2": "#6366f1",
      "brand3": "#ec5990",
      "success": "#087f5b",
      "info": "#0ea5e9",
      "warning": "#fcc419",
      "error": "#990000",
      "fatal": "#7d1a1a"
    },
    "dark": {
      "background": "#1c2128",
      "foreground": "#fcfcf5",
      "brand1": "#1fb2a6",
      "brand2": "#8957e5",
      "brand3": "#f778ba",
      "success": "#56d364",
      "info": "#58a6ff",
      "warning": "#e3b341",
      "error": "#f85149",
      "fatal": "#b62324"
    }
  },
  "extensions": {
    "telemetry": {
      "fileName": "storm",
      "fileExtension": "log",
      "path": "tmp/storm/logs",
      "stacktrace": true
    }
  }
}
