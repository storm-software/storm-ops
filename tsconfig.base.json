{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noPropertyAccessFromIndexSignature": false,
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@storm-software/config": [
        "packages/config/src/index.ts"
      ],
      "@storm-software/config-tools": [
        "packages/config-tools/src/index.ts"
      ],
      "@storm-software/config-tools/*": [
        "packages/config-tools/src/*"
      ],
      "@storm-software/config/*": [
        "packages/config/src/*"
      ],
      "@storm-software/git-tools": [
        "packages/git-tools/src/index.ts"
      ],
      "@storm-software/git-tools/*": [
        "packages/git-tools/*"
      ],
      "@storm-software/linting-tools": [
        "packages/linting-tools/src/index.ts"
      ],
      "@storm-software/linting-tools/*": [
        "packages/linting-tools/*"
      ],
      "@storm-software/testing-tools": [
        "packages/testing-tools/src/index.ts"
      ],
      "@storm-software/testing-tools/*": [
        "packages/testing-tools/src/*"
      ],
      "@storm-software/workspace-tools": [
        "packages/workspace-tools/index.ts"
      ],
      "@storm-software/workspace-tools/*": [
        "packages/workspace-tools/src/*"
      ],
      "create-storm-workspace": [
        "packages/create-storm-workspace/bin/index.ts"
      ]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}